extends layout/login
block content
  .row(style="margin-top:10%")
    .col.s12.m6
      .card.blue.darken-1
        .card-content.white-text
          form(name="form_entrada", method="post", action="login",autocomplete="off")
                h4(style="display:inline") Where Are We 
                span v.#{version}
                input.input-field(type="text",name="nickname",placeholder="#{nickname}",autocomplete="off")

                br
                input.input-field(type="text",name="roomid",placeholder="#{roomid}",autocomplete="off")

                br
                label Escoge un color&nbsp;&nbsp;&nbsp;&nbsp;
                input(type="color",name="color",value="#ff00ff",style="padding:0px;border-width:0px")
                
                br
                br
                button.btn.waves-effect.waves-light(type="submit") #{fraseboton}